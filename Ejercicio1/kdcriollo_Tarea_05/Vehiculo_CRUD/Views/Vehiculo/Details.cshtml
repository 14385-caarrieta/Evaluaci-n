@model Vehiculo_CRUD.Models.vehiculo
@{
    ViewBag.Title = "Detalles del vehiculo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="top" class="main-banner">
    <div class="container-fluid">
        <h2>@ViewBag.Title</h2>
        <div>
            <h4></h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    Placa
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.placa)
                </dd>
                <dt>
                    Marca
                </dt>
                <dd>
                    @{
                        switch (Model.marca)
                        {
                            case 1: <text>Chevrolet</text>
                            break;
                        case 2: <text>Fiat</text>
                        break;
                    case 3: <text>Great Wall</text>
                    break;
                case 4: <text>Toyota</text>
                break;
            case 5: <text>Hyundai</text>
                break;
            case 7: <text>Ferrari</text>
                break;
        }
                    }
                </dd>
                <dt>
                    Año
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.anio)
                </dd>
                <dt>
                    Foto
                </dt>
                <dd>
                    <img src="@Url.Content("~/Content/assets/images/" + @Model.foto)" alt="Producto" height="100" />
                </dd>
            </dl>
        </div>
        <hr />
    </div>
    <p>
        @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-dark text-white" })
    </p>
</div>
